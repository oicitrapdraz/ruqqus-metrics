<div class='row'>
  <div class='col-xl-3 offset-xl-3'>
    <div class='card'>
      <div class='card-header'>
        <h2 class='title text-center' style='margin-top: 20px;'>Week Growth</h2>
      </div>
      <div class='card-body'>
        <div class='table-responsive'>
          <table class='table'>
            <thead>
              <tr>
                <th scope='col' style='width: 35%;'>Name</th>
                <th scope='col' style='width: 10%;'>Growth</th>
              </tr>
            </thead>
            <tbody>
              <% @top_15_week_growth_guilds.each do |guild| %>
              <tr>
                <td><%= link_to "+#{guild.name}", guild_path(guild.name) %></td>
                <% if guild.week_growth.positive? %>
                <td style='color: #009900;'>+<%= guild.week_growth %></td>
                <% elsif guild.week_growth.zero? %>
                <td>0</td>
                <% else %>
                <td style='color: #990000;'>-<%= guild.week_growth %></td>
                <% end %>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class='col-xl-3'>
    <div class='card'>
      <div class='card-header'>
        <h2 class='title text-center' style='margin-top: 20px;'>Month Growth</h2>
      </div>
      <div class='card-body'>
        <div class='table-responsive'>

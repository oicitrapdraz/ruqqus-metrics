                <td><%= link_to "+#{guild.name}", guild_path(guild.name) %></td>
                <% if guild.month_growth.positive? %>
                <td style='color: #009900;'>+<%= guild.month_growth %></td>
                <% elsif guild.month_growth.zero? %>
                <td>0</td>
                <% else %>
                <td style='color: #990000;'>-<%= guild.month_growth %></td>
                <% end %>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>